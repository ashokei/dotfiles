" vimrc by Jonathan Dahan <jonathan@jedahan.com>
" to install:
" mkdir -p ~/.vim/bundle
" git clone http://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
" ln -s ~/.vim/vimrc ~/.vimrc

set nocompatible
filetype off

" vundle is a package manager for vim scripts
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

Bundle 'Command-T'
let g:CommandTMatchWindowAtTop=1 " show window at top
Bundle 'SuperTab'
Bundle 'Tagbar'
Bundle 'groenewege/vim-less'
Bundle 'surround.vim'
Bundle 'ctags.vim'
let g:tagbar_ctags_bin = '/usr/local/bin/ctags'
Bundle 'altercation/vim-colors-solarized'
Bundle 'scrooloose/syntastic'

Bundle 'jQuery'
Bundle 'JSON.vim'
Bundle 'jade.vim'
Bundle 'joseluisdgz/TaskVim'
Bundle 'vim-coffee-script'
Bundle 'digitaltoad/vim-jade'
Bundle 'tclem/vim-arduino'
Bundle 'plasticboy/vim-markdown'

" use git for backups
set noswapfile
set nobackup

" number lines
set number

" colors
syntax on
set background=dark
"colorscheme solarized

" soft and hard tabs at 2 spaces
set vb t_vb=
set ts=2 sts=2 sw=2 expandtab

" search immediately, ignoring case most of the time
set hlsearch
set incsearch
set ignorecase
set smartcase

" ignore dumb files
set wildignore=*.swp,*.bak,*.pyc,*.class

" tweaks
set title
set visualbell
set noerrorbells
set mouse=a

" show trailing whitespace
set list
set listchars=tab:>.,trail:.,extends:#,nbsp:.

" faster searching
map <space> /
map <c-space> ?

autocmd BufNewFile,BufRead *.json set ft=json

" coffeetags --vim-conf --include-vars
 let g:tagbar_type_coffee = {
  \ 'kinds' : [
  \   'f:functions',
  \   'o:object'
  \ ],
  \ 'kind2scope' : {
  \  'f' : 'object',
  \   'o' : 'object'
  \},
  \ 'sro' : ".",
  \ 'ctagsbin' : 'coffeetags',
  \ 'ctagsargs' : '--include-vars ',
  \}

set guifont=Inconsolata:h24
